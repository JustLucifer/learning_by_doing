#:kivy 1.0

<MainWindow>

    answer: answer
    task: task
    result: result

    GridLayout: 
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 1

            Label:
                id: task
                text: root.generate_task()
                font_size: 30

            TextInput:
                id: answer
                multiline: False
                font_size: 50
                background_color: (150/255,150/255,150/255,1)
            
            Label:
                id: result
                text: ''
                font_size: 25
                background_color: (0/255, 0/255, 0/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

        Button:
            font_size: 60
            text: "Submit"
            on_press: root.check_answer()
